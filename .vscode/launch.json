    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/overby/ppnm/exercises/input_output/debug", // Path to your compiled executable
            "args": [], // Arguments to pass to the program
            "stopAtEntry": false, // Set to true to stop at the entry point of the program
            "cwd": "/home/overby/ppnm/exercises/input_output", // Current working directory
            "environment": [],
            "externalConsole": false, // Set to true to use an external console
            "MIMode": "gdb", // Use GDB as the debugger
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Task to run before launching the debugger
            "miDebuggerPath": "/usr/bin/gdb", // Path to GDB
            "logging": {
                "engineLogging": false,
                "trace": false,
                "traceResponse": false
            }
        }
    ]
}